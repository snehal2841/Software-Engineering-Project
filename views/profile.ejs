<%- include('./partials/header') %>

    <link rel="stylesheet" type="text/css" href="/css/profile.css">
       
    <div class="profile-container">
        <div class="course">
            <div class="course-preview">
                <img src="/assets/img/pp.png" alt="Profile Picture" width="100%" height="100%">
            </div>
            <div class="course-info">      
                <table style="width:100%">
                    <tr>
                        <td class="td-1">Username </td>
                        <td>: </td>
                        <td class="td-3"><%= currentUser.username %>  </td>
                    </tr>
                    <tr>
                        <td class="td-1">Email-id </td>
                        <td>: </td>
                        <td class="td-3"><%= currentUser.email %> </td>
                    </tr>
                </table>
                <tr>
                    <a href="/newvid"><button class="btn btn-warning">Add Video</button></a>
                </tr> 
            </div>
        </div>

        <h1 style="margin-bottom:20px; color: rgb(95, 95, 95);">Recorded Videos</h1>
        <hr style="width: 20%;">
        <% files.forEach(file=>{ %>
            <div class="main"> 
                <ul class="cards">
                    <li class="cards_item">
                        <div class="card">
                            <iframe id="rec-frame" allowfullscreen style="border:none;" src='<%= file.url %>'></iframe>
                            <div class="card_content">
                                <div class="card_text">
                                    <table style="width:100%">
                                        <tr>
                                            <td>Video-ID </td>
                                            <td>: </td>
                                            <td class="td3"><%= file.public_id %> </td>
                                        </tr>
                                        <tr>
                                            <td>Date/Time </td>
                                            <td>: </td>
                                            <td class="td3"><%= file.created_at %> </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </li>   
                </ul>
            </div>
        <% }) %>
    </div>
   


    <%- include('./partials/footer') %>
