<%- include('./partials/header') %>

<h2>SignUp Here</h2>

<form action="/signup" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username" placeholder="username" name="username" required>
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" placeholder="email-id" name="email" required>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" placeholder="password" name="password" required>
    </div>
    <button class="btn btn-success">SignUp</button>
</form>

<%- include('./partials/footer') %>