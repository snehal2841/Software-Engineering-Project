<%- include('./partials/header') %>

    <link rel="stylesheet" type="text/css" href="/css/signup.css">

    <div class="inside_form">
        <div class="overlay">
            <form action="/signup" method="POST" class="validated-form" validate>
                <div>
                    <h2>SIGN UP</h2>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="username">USERNAME</label>
                    <input class="form-control" type="text" id="username" placeholder="username" name="username" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">EMAIL ADDRESS</label>
                    <input class="form-control" type="email" id="email" placeholder="email-id" name="email" required
                    title="Please provide valid email address">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">PASSWORD</label>
                    <input class="form-control" type="password" id="password" placeholder="password" name="password" required>
                </div>
                <div>
                    <input type="submit" class="button mt-3" value="SIGN UP">
                </div>
                <div class="mb-5 mt-5">
                    <hr>
                </div>
                <div class="Already">
                    <a href="/login">Already have an account? Login</a>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/signup.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

    <%- include('./partials/footer') %>